# Application Settings
APP_NAME=SEC Forensic Auditor
APP_VERSION=1.0.0
DEBUG=True
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database - PostgreSQL (optional, for production)
POSTGRES_USER=forensic_user
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=forensic_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MongoDB (optional, for document storage)
MONGO_URI=mongodb://localhost:27017
MONGO_DB=forensic_documents

# Redis (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# SEC EDGAR
SEC_USER_AGENT=Forensic Auditor your-email@example.com
SEC_API_RATE_LIMIT=10

# ML Models
MODEL_CACHE_DIR=./models_cache
FINBERT_MODEL=ProsusAI/finbert
LONGFORMER_MODEL=allenai/longformer-base-4096

# LLM API Keys (optional, for enhanced analysis)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000

# XGBoost Parameters
XGBOOST_N_ESTIMATORS=100
XGBOOST_MAX_DEPTH=6
XGBOOST_LEARNING_RATE=0.1

# SHAP
SHAP_MAX_SAMPLES=100

# Risk Thresholds
RISK_L1_THRESHOLD=0.3
RISK_L2_THRESHOLD=0.6
RISK_L3_THRESHOLD=0.85

# Authentication
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600

# Logging
LOG_LEVEL=INFO
LOG_FILE=forensic_auditor.log
